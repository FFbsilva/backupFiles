package reduce_exercicio;

import java.util.LinkedList;
import java.util.Queue;
import java.util.Scanner;

public class Interface_Calculadora {
	
	private String operador;
	private int delta = 0;
	private double resultado;
	private Scanner entrada = new Scanner(System.in);
	private Queue<Double> valores = new LinkedList<>();
	
	public Interface_Calculadora() {
		
	}
	
	/*Interface de leitura dos 
	 * dados a serem inseridos
	 * */
	public void LerN() {
		
	System.out.println("Digite Ã  vontade: digite 'q' para sair");
		
	
		while(true){
			
			try {valores.add(Double.valueOf(entrada.nextLine()));
			
			} catch(Exception e) {
				break;
			}		
		}
			
		
	}
	
	public double getResultado() {
		return resultado;
	}

	public void setResultado(double resultado) {
		this.resultado = resultado;
	}

	public void Somar() {
	 if(!valores.isEmpty()) {
		 for(Double e: valores) {
			
			 while(valores.poll()!= null) 
			 {
				 e += getResultado(); 
				 this.setResultado(e);
				 valores.poll();
			 }
		}
	 }else {
		 resultado = 0;
	 }
	}
	
	public void Sub() {
		
	}
	
	public void Multi() {
		
	}
	
	public void Div() {
		
	}
	
	/*public void somar(ArrayList<Integer> valores) {
		
		this.valores = valores;
		for(Integer i: valores) delta+= i;
	}*/
	
}
