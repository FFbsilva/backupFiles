package desafio_poo;

public class Carro {
	
	boolean status;
	double fatorAcelerar = 1.5;
	double fatorFrear = 5;
	double velocidade = 1;
	
	void ligar() {
		this.status = true;
	}
	
	void desligar() {
		this.status = false;
		this.velocidade = 0;
		
	}
	
	void acelerar() {
		if(status = true) {
			this.velocidade = this.velocidade * fatorAcelerar;}
		}
	
	
	void frear() {
		if(status = true) {
			if(velocidade > 2) { this.velocidade = fatorFrear - this.velocidade;}
		}else {
		   this.velocidade = 0; 
		}
	}
}
