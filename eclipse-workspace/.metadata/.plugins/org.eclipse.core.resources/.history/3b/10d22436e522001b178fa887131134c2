package Desafio;

import java.util.ArrayList;

public class Compra {
	
	double valorTot;
	Produto p ;
	ArrayList<Item> item = new ArrayList<>();
	
	double obterValor(){
	for(int j = 0 ; j < this.item.size(); j++) {
		
	valorTot =	valorTot + this.item.get(j).quantidade;
	}
		return valorTot;
	}
	
	void addItem(Item i){
		this.item.add(i);
	}
	
	void addItem(int quantidade, Produto p) {
		this.addItem(new Item(quantidade, p));
	}
	
	public String toString() {
		return this.item.toString();
	}


}