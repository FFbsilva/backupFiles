package desafio_poo;

public class Carro {
	
	boolean status;
	double fatorAcelerar = 1.5;
	double velocidade = 1;
	
	void ligar() {
		this.status = true;
	}
	
	void desligar() {
		this.status = false;
		this.velocidade = 0;
		
	}
	
	void acelerar() {
		if(status == true) {
			this.velocidade += this.velocidade * fatorAcelerar;
		}
		}
	
	
	void frear() {
		if(status == true) {
			while(velocidade<0) {
			this.velocidade -= 0.5;	
			}
		}
	}
}
